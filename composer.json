{
  "name": "xlthlx/comments-subscriber",
  "type": "wordpress-plugin",
  "description": "Plugin to let visitors subscribe to comments and get email notifications.",
  "keywords": [
    "WordPress",
    "Plugins"
  ],
  "homepage": "https://github.com/xlthlx/comment-subscriber",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "xlthlx",
      "homepage": "https://github.com/xlthlx/comment-subscriber"
    }
  ],
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "wptrt/wpthemereview": "^0.2.1",
    "php-parallel-lint/php-parallel-lint": "^1.4.0",
    "wp-cli/i18n-command": "^2.6.3",
    "wpreadme2markdown/wp2md": "^4.1.2"
  },
  "scripts": {
    "check": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs -s . --standard=PHPCompatibility --runtime-set testVersion 8.4 --ignore=vendor/*,node_modules/*,wp-content/* --extensions=php",
    "lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --ignore=vendor/*,node_modules/*,wp-content/* --extensions=php . -n -v --report-file=report.txt",
    "lint:wpcs:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --ignore=vendor/*,node_modules/*,wp-content/* --extensions=php .",
    "lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor --exclude wp-content .",
    "readme": "@php ./vendor/wpreadme2markdown/wp2md/bin/wp2md -i readme.txt -o README.md"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/installers": true
    }
  }
}
